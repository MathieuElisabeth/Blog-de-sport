include ../partials/header.jade
form(action="/login", method="post")
  .px-8.relative.top-40(class='md:px-28')
    .bg-gray-800.shadow-md.mx-auto.rounded.px-8.pt-6.pb-8.mb-4.flex.flex-col(class='md:w-2/5')
      .mb-4
        label.block.text-white.text-sm.font-bold.mb-2(for='username')
          | E-mail
        input#email.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-grey-darker(type='email' placeholder='Votre e-mail' name='email')
      .mb-6
        label.block.text-white.text-sm.font-bold.mb-2(for='password')
          | Mot de passe
        input#password.shadow.appearance-none.border.border-red.rounded.w-full.py-2.px-3.text-grey-darker.mb-3(type='password' placeholder='******************' name='password')
      .flex.items-center.justify-between
        button.bg-blue-500.text-white.font-bold.py-2.px-4.rounded(class='hover:bg-blue-dark' type='submit')
          | Connexion
script(src='/src/blog.js')
